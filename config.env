CONFIG_ENV=config.env

# 1. 源码地址 (必须修正为SDM670，LineageOS把710归类在670仓库里)
KERNEL_SOURCE=https://github.com/LineageOS/android_kernel_xiaomi_sdm670
KERNEL_SOURCE_BRANCH=lineage-21
KERNEL_CONFIG=vendor/sirius_defconfig
KERNEL_IMAGE_NAME=Image.gz-dtb
ARCH=arm64
ADD_LOCALVERSION_TO_FILENAME=false
EXTRA_CMDS:LD=ld.lld

# 2. 编译器设置 (4.9内核老旧，用旧版Clang防报错)
# Clang
## Custom
USE_CUSTOM_CLANG=true
CUSTOM_CLANG_SOURCE=https://github.com/Panchajanya1999/azure-clang
CUSTOM_CLANG_BRANCH=clang-12

### if your set USE CUSTOM CLANG to false than DO NOT CHANGE CUSTOM CMDS
CUSTOM_CMDS:CLANG_TRIPLE=aarch64-linux-gnu-

## AOSP
CLANG_BRANCH=master-kernel-build-2022
# 强制改为 r383902 (Clang 12)，这对4.9内核最稳定，不容易红字报错
CLANG_VERSION=r383902

# GCC (保持默认)
ENABLE_GCC_ARM64=true
ENABLE_GCC_ARM32=true
USE_CUSTOM_GCC_64=false
CUSTOM_GCC_64_SOURCE=
CUSTOM_GCC_64_BRANCH=
CUSTOM_GCC_64_BIN=aarch64-linux-android-
USE_CUSTOM_GCC_32=false
CUSTOM_GCC_32_SOURCE=
CUSTOM_GCC_32_BRANCH=
CUSTOM_GCC_32_BIN=arm-linux-androideabi-

# 3. KernelSU 核心设置 (必须全部开启)
ENABLE_KERNELSU=true
KERNELSU_TAG=main
KSU_EXPECTED_SIZE=
KSU_EXPECTED_HASH=

# 4. 杂项配置 (防止编译失败的关键)
# 必须关闭 LTO，否则4.9内核容易内存溢出或报错
DISABLE-LTO=true
# 必须禁用 Werror，否则一个标点符号警告都会导致编译停止
DISABLE_CC_WERROR=true
# 必须开启 Kprobes，这是 KSU 运行的基础
ADD_KPROBES_CONFIG=true
# 必须开启 OverlayFS，这也是 KSU 必须的
ADD_OVERLAYFS_CONFIG=true
# 必须打补丁，否则只是普通内核
APPLY_KSU_PATCH=true
REMOVE_UNUSED_PACKAGES=true

# AnyKernel3 (打包工具，保持默认)
## AnyKernel3 Custom
USE_CUSTOM_ANYKERNEL3=false
CUSTOM_ANYKERNEL3_SOURCE=
CUSTOM_ANYKERNEL3_BRANCH=

# Ccache
ENABLE_CCACHE=true

# DTBO image
NEED_DTBO=false

# Build boot images (我们只需要刷机包，不需要boot镜像)
BUILD_BOOT_IMG=false
SOURCE_BOOT_IMAGE=
