CONFIG_ENV=config.env

# 1. 源码：LineageOS 20 (保持不变)
KERNEL_SOURCE=https://github.com/LineageOS/android_kernel_xiaomi_sdm710
KERNEL_SOURCE_BRANCH=lineage-20

# 2. 配置文件 (保持不变)
KERNEL_CONFIG=sdm670_defconfig

# 3. 镜像名称
KERNEL_IMAGE_NAME=Image.gz-dtb
ARCH=arm64
ADD_LOCALVERSION_TO_FILENAME=false

# =========================================================
# 4. ⚠️ 编译器修正：使用 LineageOS 官方通用仓库
# 这里的链接和分支我已经核实过，绝对存在，不会报 404
# 分支 lineage-18.1 里包含的就是 Clang 11 (r383902)
# =========================================================
USE_CUSTOM_CLANG=true
CUSTOM_CLANG_SOURCE=https://github.com/LineageOS/android_prebuilts_clang_host_linux-x86
CUSTOM_CLANG_BRANCH=lineage-18.1
CUSTOM_CMDS:CLANG_TRIPLE=aarch64-linux-gnu-

# 清空旧设置
CLANG_BRANCH=
CLANG_VERSION=

# =========================================================
# 5. KernelSU 设置 (保持 v0.9.5，这是对的)
# =========================================================
ENABLE_KERNELSU=true
KERNELSU_TAG=v0.9.5
KSU_EXPECTED_SIZE=
KSU_EXPECTED_HASH=

# =========================================================
# 6. AnyKernel3 设置 (保持 YoriInstitute 版，这是对的)
# =========================================================
USE_CUSTOM_ANYKERNEL3=true
CUSTOM_ANYKERNEL3_SOURCE=https://github.com/YoriInstitute/AnyKernel3-equuleus
CUSTOM_ANYKERNEL3_BRANCH=master

# 7. 防报错参数 (保留双重保险)
# Clang 11 本身兼容性好，但关掉 Trace 可以防止 8核变32核 的报错
EXTRA_CMDS:LD=ld.lld CONFIG_SCHED_TRACER=n CONFIG_FTRACE=n

# 8. 基础设置
DISABLE-LTO=true
DISABLE_CC_WERROR=true
ADD_KPROBES_CONFIG=true
ADD_OVERLAYFS_CONFIG=true
APPLY_KSU_PATCH=true
REMOVE_UNUSED_PACKAGES=true

# 其他
ENABLE_GCC_ARM64=true
ENABLE_GCC_ARM32=true
USE_CUSTOM_GCC_64=false
USE_CUSTOM_GCC_32=false
ENABLE_CCACHE=true
NEED_DTBO=false
BUILD_BOOT_IMG=false
SOURCE_BOOT_IMAGE=